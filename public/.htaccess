<IfModule mod_rewrite.c>
    Options -Indexes
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On
    # Site is deployed in a subdirectory (e.g., https://portillosdesign.com/leo_finances/)
    # so set the rewrite base accordingly to prevent 404s.
    RewriteBase /leo_finances/

    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
